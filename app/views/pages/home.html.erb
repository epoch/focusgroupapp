<h1 class='homepage'> New and Noteworthy </h1>

<div class='col-md-8'>
  <% @products.each do |product|%>
    <div class='main_content'>
      <ul>
        <li><%=image_tag product.image, :class => 'productimg'%></li>
        <li class='large'><%=link_to product.name, product_path(product.id)%></li>
        <li class='last'><%= product.about %></li>
      </ul>
    </div>
  <%end%>
</div>


<div class='col-md-4 sidebar'>
  <aside class="about">
    <h1>SEARCH BY COMPANY</h1>
    <p>Click one to see all listed products</p>
    <ul>
      <% Company.all.each do |company| %>
        <li><%= link_to company.name, company_path(company) %></li>
      <% end %>
    </ul>
  </aside>
</div>


